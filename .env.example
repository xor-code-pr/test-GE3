# Environment variables template
# Copy this file to .env and fill in your values

# Admin Users (comma-separated list)
ADMIN_USERS=admin@example.com,superuser@example.com

# Azure Storage Configuration
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name
AZURE_STORAGE_ACCOUNT_KEY=your_storage_account_key
# Alternative: Use connection string
# AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...

# Azure AI Search Configuration
AZURE_SEARCH_SERVICE_NAME=your_search_service_name
AZURE_SEARCH_ADMIN_KEY=your_search_admin_key
# Alternative: Specify endpoint directly
# AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net

# Azure AD Configuration
AZURE_TENANT_ID=your_tenant_id
AZURE_CLIENT_ID=your_client_id
AZURE_CLIENT_SECRET=your_client_secret

# Managed Identity (set to true in production)
USE_MANAGED_IDENTITY=false

# Database Configuration
DATABASE_CONNECTION_STRING=sqlite:///knowledge_base.db
# Examples for other databases:
# DATABASE_CONNECTION_STRING=postgresql://user:password@localhost/dbname
# DATABASE_CONNECTION_STRING=mongodb://localhost:27017/knowledge_base

# Application Settings
MAX_FILE_SIZE_MB=100

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
